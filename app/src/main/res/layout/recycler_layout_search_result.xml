<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="10dp"
    android:showDividers="end"
    android:layout_margin="8dp"
    android:background="#F9F9FA"
    >

    <TextView
        android:id="@+id/name_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="8dp"
        android:drawableLeft="@drawable/icon_person"
        android:gravity="start"
        android:textColor="@color/black"
        android:textSize="16sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:id="@+id/email_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawableLeft="@drawable/icon_email"
            android:gravity="start"
            android:textColor="@color/black"
            android:textSize="16sp"
            />
        <ImageButton
            android:layout_weight="5"
            android:layout_gravity="end"
            android:id="@+id/mail_BTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="end|bottom"
            android:src="@drawable/icon_email"
            android:textAllCaps="false"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:id="@+id/phone_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawableLeft="@drawable/icon_phone_number"
            android:gravity="start"
            android:textColor="@color/black"
            />
        <ImageButton
            android:layout_weight="5"
            android:layout_gravity="end"
            android:id="@+id/call_BTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="end|bottom"
            android:src="@drawable/icon_phone_number"
            android:textAllCaps="false"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/class_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:drawableLeft="@drawable/ic_class"
        android:gravity="start"
        android:textColor="@color/black"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/subject_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:drawableLeft="@drawable/ic_subject"
        android:gravity="start"
        android:textColor="@color/black"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/district_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/icon_locaion"
        android:gravity="start"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        />


</LinearLayout>